<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="@dimen/padding_general"
    android:background="@color/colorPrimary">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/nombre_login"
        android:textSize="@dimen/tamanioTextLogin"
        android:layout_marginTop="@dimen/marginTopLogin"></TextView>
    <EditText
        android:layout_marginTop="@dimen/marginTopForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/icons"
        android:inputType="text"
        android:textSize="@dimen/sizeEditText"
        android:id="@+id/nombreLogin"
        android:maxLength="10"></EditText>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/pass_login"
        android:textSize="@dimen/tamanioTextLogin"
        android:layout_marginTop="@dimen/marginTopLogin"></TextView>
    <EditText
        android:layout_marginTop="@dimen/marginTopForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/icons"
        android:inputType="textPassword"
        android:textSize="@dimen/sizeEditText"
        android:id="@+id/passLogin"
        android:maxLength="4"></EditText>
<Button
    android:layout_marginTop="@dimen/marginTopLogin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ingresar_login"
    android:layout_gravity="center"
    android:textSize="@dimen/tamanioButtonLogin"
    android:background="@color/purple_500"
    android:textColor="@color/icons"
    android:id="@+id/btn_login"></Button>
</LinearLayout>